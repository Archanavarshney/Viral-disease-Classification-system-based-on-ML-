from tkinter import *
import os

def symptoms():
    global symptoms_screen
    symptoms_screen.title("symptoms")
    symptoms_screen = Toplevel(symptoms_screen)
    symptoms_screen.geometry("350x250")
    global username
    global gender
    global age
    global fever
    global username_entry
    global gender_entry
    global age_entry
    global fever_entry
    username = StringVar()
    gender = StringVar()
    age = StringVar()
    fever = StringVar()

    Label(symptoms_screen, text="DEGUNE SYMPTOMS ", width="350", height="5", bg="lightblue", font=("constantia", 20)).pack()
    Label(symptoms_screen, text="").pack()
    username_lable = Label(symptoms_screen, text="Username * ")
    username_lable.pack()
    username_entry = Entry(symptoms_screen, textvariable=username)
    username_entry.pack()
    gender_lable = Label(symptoms_screen, text="gender *")
    gender_lable.pack()
    gender_entry = Entry(symptoms_screen, textvariable=gender)
    gender_entry.pack()
    age_lable = Label(symptoms_screen, text="age *")
    age_lable.pack()
    age_entry = Entry(symptoms_screen, textvariable=age)
    age_entry.pack()
    fever_lable = Label(symptoms_screen, text="fever *")
    fever_lable.pack()
    fever_entry = Entry(symptoms_screen, textvariable=fever)
    fever_entry.pack()
    Label(symptoms_screen, text="").pack()
    Button(symptoms_screen, text="symptoms", width=20, height=1, bg="lightblue", command=symptoms_screen).pack()
def symptoms_user():
    username_info = username.get()
    gender_info = gender.get()
    age_info = age.get()
    fever_info = fever.get()

    file = open(username_info, "w")
    file.write(username_info + "\n")
    file.write(gender_info + "\n")
    file.write(age_info + "\n")
    file.write(fever_info)
    file.close()

    username_entry.delete(0, END)
    gender_entry.delete(0, END)
    age_entry.delete(0, END)
    fever_entry.delete(0, END)

    Label(symptoms_screen, text="symptoms Success", bg="lightgreen", width="350", height="5", font=("calibri", 50)).pack()
