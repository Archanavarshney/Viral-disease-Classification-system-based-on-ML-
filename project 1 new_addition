from tkinter import *
import os
# Designing window for registration

def register():
    global register_screen
    register_screen = Toplevel(main_screen)
    register_screen.title("Register")
    register_screen.geometry("350x250")

    global Username
    global Gender
    global Age
    global Mobile_Number
    global Email
    global Password
    global Confirm_Password
    global Username_entry
    global Gender_entry
    global Age_entry
    global Mobile_Number_entry
    global Email_entry
    global Password_entry
    global Confirm_Password_entry
    Username = StringVar()
    Gender = StringVar()
    Age = StringVar()
    Mobile_Number = StringVar()
    Email = StringVar()
    password = StringVar()
    Confirm_Password = StringVar()

    Label(register_screen, text="Enter Information ", width="100", height="1", bg="lightblue", font=("constantia", 20)).pack()
    Label(register_screen, text="").pack()
    username_lable = Label(register_screen, text="Username  ",width="100",height="1",bg="#49A", font=("times new roman",20,"italic"))

    username_lable.pack()
    username_entry = Entry(register_screen,width=36, textvariable=Username)
    username_entry.pack()
    gender_lable = Label(register_screen, text="Gender ",width="100",height="1",bg="#49A", font=("times new roman",20,"italic"))
    gender_lable.pack()
    gender_entry = Entry(register_screen,width=36, textvariable=Gender)
    gender_entry.pack()
    age_lable = Label(register_screen, text="Age ",width="100",height="1",bg="#49A", font=("times new roman",20,"italic"))
    age_lable.pack()
    age_entry = Entry(register_screen,width=36, textvariable=Age)
    age_entry.pack()
    mobile_number_lable = Label(register_screen, text="Mobile Number ",width="100",height="1",bg="#49A", font=("times new roman",20,"italic"))
    mobile_number_lable.pack()
    mobile_number_entry = Entry(register_screen,width=36, textvariable=Mobile_Number)
    mobile_number_entry.pack()
    email_lable = Label(register_screen, text="Email ",width="100",height="1",bg="#49A", font=("times new roman",20,"italic"))
    email_lable.pack()

    email_entry = Entry(register_screen,width=36, textvariable=Email)
    email_entry.pack()
    password_lable = Label(register_screen, text="Password  ",width="100",height="1",bg="#49A", font=("times new roman",20,"italic"))
    password_lable.pack()
    password_entry = Entry(register_screen,width=36, textvariable=password, show='*')
    password_entry.pack()
    confirm_password_lable = Label(register_screen, text="Confirm Password ",width="100",height="1",bg="#49A", font=("times new roman",20,"italic"))
    confirm_password_lable.pack()
    confirm_password_entry = Entry(register_screen,width=36, textvariable="Confirm Password ")
    confirm_password_entry.pack()
    Label(register_screen, text="").pack()
    Button(register_screen, text="Register", width=36, height=1, bg="lightblue",font=("times new roman",20), command=register_user).pack()
    register_screen['bg'] = '#49A'


# Designing window for login

def login():
    global login_screen
    login_screen = Toplevel(main_screen)
    login_screen.title("Login")
    login_screen.geometry("350x250")
    login_screen['bg'] = '#49A'
    Label(login_screen, text="Enter Login Information", width="200", height="1", bg="lightblue", font=("constantia", 20)).pack()

    Label(login_screen, text="").pack()

    global username_verify
    global password_verify

    username_verify = StringVar()
    password_verify = StringVar()

    global username_login_entry
    global password_login_entry

    Label(login_screen, text="  Username ",width="200", height="1", bg='#49A' ,font=("times new roman",20)).pack()

    username_login_entry = Entry(login_screen, textvariable=username_verify)
    username_login_entry.pack()
    Label(login_screen, text="").pack()
    Label(login_screen, text="Password  ",width="200", height="1", bg='#49A' ,font=("times new roman",20)).pack()
    password_login_entry = Entry(login_screen, textvariable=password_verify, show='*')
    password_login_entry.pack()
    Label(login_screen, text="").pack()
    Button(login_screen, text="Login", bg="lightgreen", width=15, height=1 ,font=("times new roman",20),command=login_verify).pack()


# Implementing event on register button

def register_user():
    username_info = username.get()
    gender_info = gender.get()
    age_info = age.get()
    mobile_number_info = mobile_number.get()
    email_info = email.get()
    password_info = password.get()
    confirm_password_info = confirm_password.get()


    file = open(username_info, "w")
    file.write(username_info + "\n")
    file.write(gender_info + "\n")
    file.write(age_info + "\n")
    file.write(mobile_number_info + "\n")
    file.write(email_info + "\n")
    file.write(password_info + "\n")
    file.write(confirm_password_info)

    file.close()

    username_entry.delete(0, END)
    gender_entry.delete(0, END)
    age_entry.delete(0, END)
    mobile_number_entry.delete(0, END)
    email_entry.delete(0, END)
    password_entry.delete(0, END)
    confirm_password_entry.delete(0, END)

    Label(register_screen, text="Registration Success", bg="lightgreen", width="350", height="5", font=("calibri", 50)).pack()


# Implementing event on login button

def login_verify():

    username1 = username_verify.get()
    password1 = password_verify.get()
    username_login_entry.delete(0, END)
    password_login_entry.delete(0, END)

    list_of_files = os.listdir()
    if username1 in list_of_files:
        file1 = open(username1, "r")
        verify = file1.read().splitlines()
        if password1 in verify:
            login_sucess()

        else:
            password_not_recognised()

    else:
        user_not_found()


# Designing popup for login success

def login_sucess():
    global login_success_screen
    login_success_screen = Toplevel(login_screen)
    login_success_screen.title("Success")
    login_success_screen.geometry("150x100")
    Label(login_success_screen, text="Login Success").pack()
    Button(login_success_screen, text="OK", command=delete_login_success).pack()


# Designing popup for login invalid password

def password_not_recognised():
    global password_not_recog_screen
    password_not_recog_screen = Toplevel(login_screen)
    password_not_recog_screen.title("Success")
    password_not_recog_screen.geometry("150x100")
    Label(password_not_recog_screen, text="Invalid Password ").pack()
    Button(password_not_recog_screen, text="OK", command=delete_password_not_recognised).pack()


# Designing popup for user not found

def user_not_found():
    global user_not_found_screen
    user_not_found_screen = Toplevel(login_screen)
    user_not_found_screen.title("Success")
    user_not_found_screen.geometry("150x100")
    Label(user_not_found_screen, text="User Not Found").pack()
    Button(user_not_found_screen, text="OK", command=delete_user_not_found_screen).pack()
    user_not_found_screen['bg'] = '#49A'


# Deleting popups

def delete_login_success():
    login_success_screen.destroy()


def delete_password_not_recognised():
    password_not_recog_screen.destroy()


def delete_user_not_found_screen():
    user_not_found_screen.destroy()


# Designing Main(first) window

def main_account_screen():
    global main_screen
    main_screen = Tk()
    main_screen.geometry("400x350")
    main_screen.title("Account Login")
    main_screen.configure(bg='lightgrey')


    Label(text="Welcome To dHealth App", bg="LIGHTBLUE", width="200", height="0", font=("constantia", 25)).pack()
    main_screen['bg'] = '#49A'

    Label(text="").pack()
    Button(text="Login", bg="lightgreen", height="1", width="20",font=("times new roman",30), command=login).pack()
    Label(text="").pack()
    Button(text="Register", bg="lightgreen", height="1", width="20",font=("times new roman",30), command=register).pack()


    main_screen.mainloop()


main_account_screen()

